{
  "name": "@yr/weather-symbols",
  "version": "1.0.1",
  "description": "Yr weather symbols",
  "author": "alexander.pope@nrk.no",
  "dependencies": {
  },
  "devDependencies": {
    "buddy": "3.1.0",
    "react-dom": "0.14.3",
    "simpler-browser-require": "1.0.0",
    "svg-to-png": "^2.0.1",
    "transfigure-babel": "6.1.4",
    "transfigure-nunjucks": "2.1.0"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "buddy build",
    "convert": "node bin/convert dist",
    "prepublish": "buddy build"
  },
  "repository": "https://github.com/YR/weather-symbols.git",
  "license": "MIT",
  "browser": "index.js",
  "buddy": {
    "build": {
      "targets": [
        {
          "input": "src",
          "output": ".",
          "modular": false
        },
        {
          "input": "src/preview.js",
          "output": "preview.js",
          "bootstrap": true
        }
      ]
    },
    "server": {
      "port": 3000
    }
  }
}
