{
  "name": "yr-weather-symbols",
  "version": "0.5.0",
  "dependencies": {
    "trait": "git://github.com/YR/trait"
  },
  "devDependencies": {
    "dustjs-linkedin": "*",
    "classlist": "git://github.com/YR/classlist",
    "style": "git://github.com/YR/style",
    "lodash.foreach": "^2.4.0",
    "buddy": "~1.0.0",
    "casperjs": "~1.1.0-beta3"
  },
  "scripts": {
    "convert": "casperjs convert.js bin/images"
  },
  "main": "src/js/weatherSymbol",
  "repository": "https://github.com/YR/yr-weather-symbols.git",
  "private": true,
  "buddy": {
    "build": {
      "js": {
        "sources": [
          "src/js"
        ],
        "targets": [
          {
            "input": "src/js/main.js",
            "output": "bin/js/main.js",
            "boilerplate": true,
            "bootstrap": true,
            "alias": {
              "dust": "./node_modules/dustjs-linkedin/dist/dust-core.js"
            }
          }
        ]
      },
      "html": {
        "sources": [
          "src/html"
        ],
        "targets": [
          {
            "input": "src/html/",
            "output": "."
          }
        ]
      }
    },
    "settings": {
      "server": {
        "directory": ".",
        "port": 8000
      }
    }
  }
}
