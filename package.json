{
  "name": "@yr/weather-symbols",
  "version": "3.1.0-beta-1",
  "description": "Yr weather symbols",
  "author": "alexander.pope@nrk.no",
  "dependencies": {
    "@yr/graphics-component": "2.1.0-beta-1"
  },
  "devDependencies": {
    "buddy": "4.1.x",
    "buddy-plugin-babel": "6.6.x",
    "buddy-plugin-stylus": "*",
    "buddy-plugin-nunjucks": "*",
    "react-dom": "15.0.0-rc.1",
    "simpler-browser-require": "*",
    "svg-to-png": "2.0.1"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "buddy build",
    "convert": "node bin/convert dist",
    "prepublish": "buddy build && node bin/convert dist",
    "watch": "buddy -rs -g dev watch"
  },
  "repository": "https://github.com/YR/weather-symbols.git",
  "license": "MIT",
  "browser": "index.js",
  "buddy": {
    "build": {
      "targets": [
        {
          "input": "src",
          "output": ".",
          "modular": false
        },
        {
          "input": "src/preview.js",
          "output": "preview.js",
          "label": "dev",
          "bootstrap": true
        }
      ]
    },
    "server": {
      "port": 3000
    }
  }
}
