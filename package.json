{
  "name": "yr-weather-symbols",
  "version": "0.13.1",
  "dependencies": {
    "trait": "git://github.com/YR/trait#0.4.0",
    "svg": "git+ssh://git@github.com:yr/svg.git#0.1.1",
    "capabilities": "git+ssh://git@github.com:yr/capabilities.git#0.1.0",
    "ease": "git+ssh://git@github.com:yr/ease.git#0.2.0",
    "number-utilities": "git+ssh://git@github.com:yr/number-utils.git#0.2.1",
    "yr-colours": "git://github.com/YR/yr-colours#0.2.0",
    "runtime": "git://github.com/YR/runtime#0.1.0",
    "lodash-node": "~2.4.0",
    "react": "~0.10.0"
  },
  "devDependencies": {
    "requestAnimationFrame": "git://github.com/YR/requestAnimationFrame",
    "nunjucks": "~1.0.5",
    "classlist": "git+ssh://git@github.com:yr/classlist.git#0.4.0",
    "style": "git+ssh://git@github.com:yr/style.git#0.8.2",
    "buddy": "git://github.com/popeindustries/buddy",
    "casperjs": "~1.1.0-beta3",
    "mocha": "*",
    "expect.js": "*",
    "should": "3.3.2",
    "mocha-sauce": "git://github.com/pbakaus/mocha-sauce.git",
    "term-canvas": "*"
  },
  "scripts": {
    "convert": "mkdir temp && casperjs src/convert.js temp && pngcrush -d dist/png temp/* && rm -Rf temp && cd dist && zip -r png.zip png ",
    "test": "NODE_ENV=test mocha test/server-test.js --reporter spec --require should",
    "test-client": "mocha-phantomjs test/test-runner.html",
    "sauce": "node test/sauce.js"
  },
  "main": "src/js/weatherSymbolComponent",
  "repository": "https://github.com/YR/yr-weather-symbols.git",
  "license": "MIT",
  "private": true,
  "buddy": {
    "build": {
      "js": {
        "sources": ["src/js", "src/js-preview"],
        "targets": [
          {
            "input": "src/js-preview/index.js",
            "output": "./index.js",
            "boilerplate": true,
            "bootstrap": true,
            "alias": {
              "nunjucks": "./node_modules/nunjucks/browser/nunjucks-slim.js"
            }
          },
          {
            "input": "src/js/weatherSymbolElement.js",
            "output": "test/weatherSymbolElement.js",
            "boilerplate": true,
            "bootstrap": true
          }
        ]
      },
      "css": {
        "targets": [
          {
            "input": "src/css",
            "output": "./"
          }
        ]
      },
      "html": {
        "targets": [
          {
            "input": "src/html/index.nunjs",
            "output": "./"
          },
          {
            "input": "src/html/weatherSymbolsDefs.nunjs",
            "output": "./"
          }
        ]
      }
    },
    "settings": {
      "server": {
        "directory": "./",
        "port": 8080
      }
    }
  }
}
