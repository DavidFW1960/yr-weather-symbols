{% extends "base.nunjs" %}

{% block css %}
  * {
    padding: 0;
    margin: 0;
  }
  table {
    margin: 1em 2em;
    border-collapse: collapse;
  }
  td, th {
    border: 1px solid #eee;
    padding: 0.7em;
  }
  .iconContainer {
    height: 51px;
    width: 51px;
  }
  {{ symbolsCSS }}
{% endblock %}

{% block body %}
  {{ symbolDefs }}
    <table>
    <tr>
    <th>ID</th>
    <th>PNG</th>
    <th>SVG</th>
    </tr>
      {% for symbol in symbols %}
      <tr>
        <td>{{ symbol.id }}</td>
        <td class="iconContainer">
          <img src="png/{{ symbol.png }}" alt="Weather symbol">
        </td>
        <td class="iconContainer">
          {{ symbol.svg }}
        </td>
      </tr>
    {% endfor %}
    </table>
  {% endblock %}
</html>